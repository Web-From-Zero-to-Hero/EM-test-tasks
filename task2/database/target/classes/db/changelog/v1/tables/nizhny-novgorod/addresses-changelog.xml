<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-nn-addresses-1" author="Dmitry Matov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="nizhny_novgorod_addresses"/>
            </not>
        </preConditions>

        <createTable tableName="nizhny_novgorod_addresses">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="address" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="latitude" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="numeric">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="v1-nn-addresses-2" author="Dmitry Matov">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="nizhny_novgorod_addresses"/>
        </preConditions>

        <loadData tableName="nizhny_novgorod_addresses" file="db/data/nizhny-novgorod/addresses.csv"/>
    </changeSet>

</databaseChangeLog>